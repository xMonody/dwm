dwm_date () {
    date "+%H:%M:%S"
}
dwm_date0(){
    date "+%D"
}


dwm_alsa () {
    VOL=$(amixer get Master | tail -n1 | sed -r "s/.*\[(.*)%\].*/\1/")
    printf "%s" "$SEP1"
    if [ "$IDENTIFIER" = "unicode" ]; then
        if [ "$VOL" -eq 0 ]; then
            printf ""
        elif [ "$VOL" -gt 0 ] && [ "$VOL" -le 33 ]; then
            printf "%s%%" "$VOL"
        elif [ "$VOL" -gt 33 ] && [ "$VOL" -le 66 ]; then
            printf " %s%%" "$VOL"
        else
            printf " %s%%" "$VOL"
        fi
    else
        if [ "$VOL" -eq 0 ]; then
            printf "MUTE"
        elif [ "$VOL" -gt 0 ] && [ "$VOL" -le 33 ]; then
            printf "%s%%" "$VOL"
        elif [ "$VOL" -gt 33 ] && [ "$VOL" -le 66 ]; then
            printf "%s%%" "$VOL"
        else
            printf "%s%%" "$VOL"
        fi
    fi
    printf "%s\n" "$SEP2"
}

dwm_df()
{
      printf "%s%s%s\n" "$(df -h / | awk ' /[0-9]/ {print $4"ï„’"$2}')"
}
dwm_weather()
{
      curl -sf 'wttr.in/FoShan?format=1'
}
dwm_free()
{
    #free --mebi | sed -n '2{p;q}' | awk '{printf ("%2.2fGï„’%2.2fGï„’%2.2fG\n", ( $4 / 1024),($3 / 1024)+($6 / 1024),($2/1024) )}'
    free --mebi | sed -n '2{p;q}' | awk '{printf ("%2.2fGï„’%2.2fG\n", ( $4 / 1024),($2/1024) )}'
}
while xsetroot -name "$(dwm_cpu) "ï”‚:"$(dwm_net1) "ï¡š:"$(dwm_free) "ïŸ‰:"$(dwm_df) "ï©½:"$(dwm_alsa) "ï‰´:"$(dwm_date0) "ï®®:"$(dwm_date)" 
do
    sleep 1 # refresh per 60s
done &
exec dwm
